rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ヘルパー関数: 認証済みユーザーか
    function isAuthenticated() {
      return request.auth != null;
    }

    // ヘルパー関数: 管理者か
    function isAdmin() {
      return isAuthenticated() &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // ヘルパー関数: 自分のデータか
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // ヘルパー関数: 承認済みユーザーか
    function isApproved() {
      return isAuthenticated() &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.status == "approved";
    }

    // users collection
    match /users/{userId} {
      // 読み取り: 認証済みユーザーなら誰でも
      allow read: if isAuthenticated();

      // 作成: 自分のドキュメントのみ、role フィールドは含めない
      allow create: if isOwner(userId) &&
                       !('role' in request.resource.data);

      // 更新:
      // - 自分のドキュメント: role を変更しない場合のみ許可
      // - 管理者: 誰のドキュメントでも更新可能
      allow update: if isAdmin() ||
                       (isOwner(userId) &&
                        (!('role' in request.resource.data) ||
                         request.resource.data.role == resource.data.role));

      // 削除: 管理者のみ
      allow delete: if isAdmin();
    }

    // reports collection
    match /reports/{reportId} {
      // 読み取り: 認証済みユーザーなら誰でも
      allow read: if isAuthenticated();

      // 作成: 承認済みユーザーのみ、自分の userId のみ
      allow create: if isApproved() &&
                       request.resource.data.userId == request.auth.uid;

      // 更新: 自分のレポートのみ、userId 変更不可
      allow update: if isOwner(resource.data.userId) &&
                       request.resource.data.userId == resource.data.userId;

      // 削除: 自分のレポートまたは管理者
      allow delete: if isOwner(resource.data.userId) || isAdmin();
    }

    // guardianProfiles collection
    match /guardianProfiles/{profileId} {
      // 読み取り: 認証済みユーザーなら誰でも
      allow read: if isAuthenticated();

      // 作成: 自分のプロフィールのみ
      allow create: if isOwner(profileId);

      // 更新: 自分のプロフィールのみ
      allow update: if isOwner(profileId);

      // 削除: 管理者のみ
      allow delete: if isAdmin();
    }

    // guardianCollection collection
    match /guardianCollection/{collectionId} {
      // 読み取り: 認証済みユーザーなら誰でも
      allow read: if isAuthenticated();

      // 作成: 自分のコレクションのみ
      allow create: if isOwner(collectionId);

      // 更新: 自分のコレクションのみ
      allow update: if isOwner(collectionId);

      // 削除: 管理者のみ
      allow delete: if isAdmin();
    }

    // messages collection (DM機能)
    match /messages/{messageId} {
      // 読み取り: 送信者または受信者または管理者
      allow read: if isAuthenticated() &&
                     (resource.data.senderId == request.auth.uid ||
                      resource.data.receiverId == request.auth.uid ||
                      isAdmin());

      // 作成: 承認済みユーザーのみ、senderId は自分のみ
      allow create: if isApproved() &&
                       request.resource.data.senderId == request.auth.uid;

      // 更新: 送信者のみ（既読状態の更新など）
      allow update: if isOwner(resource.data.senderId);

      // 削除: 送信者または管理者
      allow delete: if isOwner(resource.data.senderId) || isAdmin();
    }

    // penaltyHistory collection
    match /penaltyHistory/{penaltyId} {
      // 読み取り: 対象ユーザー本人または管理者
      allow read: if isAuthenticated() &&
                     (resource.data.userId == request.auth.uid || isAdmin());

      // 作成・更新・削除: 管理者のみ
      allow create, update, delete: if isAdmin();
    }

    // activityLogs collection
    match /activityLogs/{logId} {
      // 読み取り: 管理者のみ
      allow read: if isAdmin();

      // 作成: システムのみ（実際には Admin SDK から）
      allow create: if false;

      // 更新・削除: 禁止
      allow update, delete: if false;
    }

    // dm_messages collection (管理者とメンバー間のDM)
    match /dm_messages/{messageId} {
      // 読み取り: 参加者または管理者
      allow read: if isAuthenticated() &&
                     (request.auth.uid in resource.data.participants || isAdmin());

      // 作成: 承認済みユーザーまたは管理者のみ、参加者に自分が含まれる
      allow create: if isAuthenticated() &&
                       (isApproved() || isAdmin()) &&
                       request.auth.uid in request.resource.data.participants;

      // 更新: 送信者のみ
      allow update: if isOwner(resource.data.fromUserId);

      // 削除: 送信者または管理者
      allow delete: if isOwner(resource.data.fromUserId) || isAdmin();
    }

    // energy_history collection (エナジー履歴)
    match /energy_history/{historyId} {
      // 読み取り: 認証済みユーザーなら誰でも
      allow read: if isAuthenticated();

      // 作成: 自分のエナジー履歴のみ
      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid;

      // 更新・削除: 禁止（履歴は削除・変更不可）
      allow update, delete: if false;
    }

    // errorLogs collection (エラーログ)
    match /errorLogs/{logId} {
      // 読み取り: 管理者のみ
      allow read: if isAdmin();

      // 作成: 認証済みユーザーなら誰でも（エラーログ記録のため）
      allow create: if isAuthenticated();

      // 更新: 禁止
      allow update: if false;

      // 削除: 管理者のみ
      allow delete: if isAdmin();
    }

    // invitations collection
    match /invitations/{invitationId} {
      // 読み取り: 誰でも可能（登録時の検証用）
      allow read: if true;

      // 作成・削除: 管理者のみ
      allow create, delete: if isAdmin();

      // 更新: 認証済みユーザー（使用済みフラグ更新）または管理者
      allow update: if isAuthenticated() || isAdmin();
    }

    // judgment_history collection
    match /judgment_history/{historyId} {
      // 読み取り: 管理者のみ
      allow read: if isAdmin();

      // 作成: サーバーサイド（管理者SDK推奨だが、現状はAPIルートからの書き込みを許可するため一旦全許可は危険）
      // TODO: Firebase Admin SDKへの移行を推奨
      // 現状はAPIルートからの書き込みを許可するため、認証済みユーザーなら作成可能とする（Cron実行用アカウントが必要）
      allow create: if true; // ⚠️ 一時的: Cronからの書き込みを許可するため（本来はAdmin SDKを使うべき）
      
      // 更新・削除: 管理者のみ
      allow update, delete: if isAdmin();
    }

    // team_goals collection
    match /team_goals/{goalId} {
      // 読み取り: 誰でも可能（目標表示用）
      allow read: if true;

      // 書き込み: 管理者のみ
      allow write: if isAdmin();
    }

    // dailyLogins collection（デイリーログインボーナス）
    match /dailyLogins/{userId} {
      // 読み取り: 自分のデータまたは管理者
      allow read: if isOwner(userId) || isAdmin();

      // 作成・更新: 自分のデータのみ
      allow create, update: if isOwner(userId);

      // 削除: 管理者のみ
      allow delete: if isAdmin();
    }

    // ai_settings collection（AIフィードバックプロンプト設定）
    match /ai_settings/{settingId} {
      // 読み取り: 認証済みユーザー
      allow read: if isAuthenticated();

      // 書き込み: 管理者のみ
      allow write: if isAdmin();
    }

    // post_feedbacks collection（投稿へのAIフィードバック）
    match /post_feedbacks/{feedbackId} {
      // 読み取り: 自分へのフィードバックまたは管理者
      allow read: if isAuthenticated() && 
        (resource.data.userId == request.auth.uid || isAdmin());

      // 作成: 認証済みユーザー（日報送信時に自動生成）
      allow create: if isAuthenticated();

      // 更新: 管理者のみ（dmSentフラグ更新等）
      allow update: if isAdmin();

      // 削除: 管理者のみ
      allow delete: if isAdmin();
    }

    // その他のコレクションはデフォルトで禁止
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
